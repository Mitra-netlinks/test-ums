<?xml version='1.0'?>
<odoo>
    <record id='classes_view_form' model='ir.ui.view'>
        <field name='name'>class.form</field>
        <field name='model'>nl_ums.class</field>
        <field name='arch' type='xml'>
            <form>
                <field name='name'/>
            </form>
        </field>
    </record>

    <act_window 
            id='ums_classes_list_action'
            name='Classes'
            res_model='nl_ums.class'
            view_type='form'
            view_mode='tree,form,search'/>

    <!-- ums main menu -->
    <menuitem 
            name='UMS'
            id='ums_main_menu'/>

        <!-- ums classes side menu -->
        <menuitem
            id='ums_classes_side_menu'
            parent='ums_main_menu'
            name='Classes'
            action='ums_classes_list_action'/>
</odoo>