<odoo>
  <data>
      <!-- explicit form view definition -->
      <record  id="master_topic_view_form" model="ir.ui.view">
        <field name="name">master.topic.form</field>
        <field name="model">master.topic</field>
        <field name="arch" type="xml">
          <form string="Topic">
            <group>
              <field name="title"/>
              <field name="description"/>
            </group>
          </form>
        </field>
      </record>
      <!-- explicit list view definition -->
      <record  id="master_topic_view_tree" model="ir.ui.view">
        <field name="name">master.topic.tree.view</field>
        <field name="model">master.topic</field>
        <field name="arch" type="xml">
          <tree>
            <field name="title"/>
            <field name="description"/>
          </tree>
        </field>
      </record>

      <!-- actions opening views on models -->
      <record id="master_topic_action" model="ir.actions.act_window" >
        <field name="name">Topic</field>
        <field name="res_model">master.topic</field>
        <field name="view_mode">tree,form</field>
      </record>
      <!-- Menus -->
      <menuitem id="master_topic_sidebar_sub_menu_topic" name="Topics" parent="menu_master"
                action="master_topic_action"/>
  </data>
</odoo>